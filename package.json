{
  "name": "trx-earn-telegram-mini-app",
  "version": "1.0.0",
  "description": "Telegram Mini App for earning TRX through ads, tasks, and referrals",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "vercel-build": "npm run install-all && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "firebase-admin": "^11.11.1",
    "node-telegram-bot-api": "^0.63.0",
    "crypto": "^1.0.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": ["telegram", "mini-app", "trx", "crypto", "ads", "referral"],
  "author": "TRX Earn Bot",
  "license": "MIT"
}